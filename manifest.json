{
"name" :"StackOverflow Google",
"version" : "1.0",
"manifest_version": 2,
"description" :"StackOverflow Google",
"permissions": ["tabs", "activeTab","<all_urls>","https://*/"],
"browser_action" :
{
	"default_popup" :"pop_up.html"
},

"background": {
    "scripts": ["background.js", "stackoverflow.js","mdn.js","wikipedia.js"],
    "persistent": false
},
"externally_connectable": {
    "matches": ["*://*.google.com/*"]
},
	
"content_scripts": 
[ 
	{
	"matches": ["*://www.google.com/search?*","*://www.ecosia.org/search?*","*://search.yahoo.com/search*"],
	"js": ["run_prettify.js","tex-svg.js","setPanel.js", "stackoverflow.js","mdn.js","wikipedia.js"],
	"css": ["styleStack.css","tomorrow.css"] 
	}
]
}
